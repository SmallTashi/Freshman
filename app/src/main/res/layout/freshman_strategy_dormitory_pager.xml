<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/strategy_fragment_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strategy_fragment_tab" />

    <android.support.design.widget.TabLayout
        android:id="@+id/strategy_fragment_tab"
        android:layout_width="0dp"
        android:layout_height="48dp"

        android:background="@color/cardview_light_background"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/strategy_fragment_pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/train_tab_text_sel"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/train_tab_text_sel"
        app:tabTextColor="@color/train_trb_text">

    </android.support.design.widget.TabLayout>
</android.support.constraint.ConstraintLayout>